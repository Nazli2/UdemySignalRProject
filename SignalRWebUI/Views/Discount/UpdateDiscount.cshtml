@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirimli Ürünü Güncelleme Satfası</div>
						</div>
						<input type="hidden" asp-for="DiscountID" />
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlık Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="amount">İndirim Oranını Giriniz</label>
								<input type="text" class="form-control" asp-for="Amount" id="amount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">İndirimli Ürün Görselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary btn-round">Günün İndirimli Ürününü Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

